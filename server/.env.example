# Gemini API Key (for default voices and text generation)
GEMINI_API_KEY=your_gemini_api_key_here

# Server port
PORT=3001

# ============ Custom TTS Service Configuration ============
# Custom TTS endpoint (voice cloning service)
TTS_ENDPOINT=http://10.30.0.4/tts

# TTS concurrent requests (default: 10)
# Increase for faster batch processing, decrease if hitting rate limits
TTS_CONCURRENCY=10

# ============ PostgreSQL / Cloud SQL Configuration ============
# Primary storage for projects, voices, and media metadata

# Cloud SQL connection name (for Cloud Run deployment)
# Format: PROJECT_ID:REGION:INSTANCE_NAME
CLOUD_SQL_CONNECTION_NAME=your-project:asia-southeast1:gather

# Database connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gather
DB_USER=gather
DB_PASSWORD=your_database_password

# ============ Authentication Configuration ============
# JWT secret for signing tokens (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ============ Google Cloud Storage (GCS) Configuration ============
# Used for storing media files (images, audio)
# Also serves as fallback if database is not available

# GCS bucket name (required for cloud storage)
GCS_BUCKET=your-bucket-name

# GCS project ID (optional, defaults to GOOGLE_PROJECT_ID)
GCS_PROJECT_ID=your-gcp-project-id

# Path to GCP service account credentials JSON file (optional)
# If not set, will use Application Default Credentials (ADC)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Alternative project ID env var (used by some GCP libraries)
GOOGLE_PROJECT_ID=your-gcp-project-id
